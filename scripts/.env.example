# Deployment Configuration
# Copy this file to .env (production) or .env.development

# SSH connection string (user@host)
SSH_HOST=user@your-server.com

# Remote paths (absolute)
GRAFANA_PLUGINS_PATH=/var/lib/grafana/plugins
AGENT_PATH=/opt/docker-metrics-collector

# Container names to restart after deployment
GRAFANA_CONTAINER=grafana
AGENT_CONTAINER=docker-metrics-agent

# Docker image registry (for agent deployment)
DOCKER_REGISTRY=ghcr.io/artur-matkowski

# Optional: SSH key path (leave empty to use default)
SSH_KEY=

# Optional: SSH port (default: 22)
SSH_PORT=22
